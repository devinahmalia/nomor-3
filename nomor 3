#include <iostream>
using namespace std;

int main()
{
    int A[5]= {15,24,20,12,10};
    int bil;

        for(int i=0;i<10;i++)
    {
        cout<<"A["<<i<<"]: "
        <<A[i]<<endl;
    }
    cout<<endl;
    cout<<"Masukan Nilai Yang Akan Di Cari: ";
    cin>>bil;

    for(int j=0;j<10;j++)
    {
        if(A[j]==bil)
        {
            cout<<"Nilai Yang Di Cari Terdapat Pada Indeks ke-"<<j;
            break;
        }
    }
    return 0;
}
